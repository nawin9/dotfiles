!-----------
! My URXVT setting
!-----------

!----------
! Xft settings
!----------

Xft.dpi				: 96
Xft.antialias			: rgba
Xft.rgba			: rgb
Xft.hinting			: true
Xft.hintstyle			: hintslight

!---------
! URxvt general
!---------

URxvt*termName			: rxvt-unicode
URxvt*loginShell		: true
URxvt.depth			: 32
!!URxvt.geometry			: 84x24
URxvt.transparent		: true
!!URxvt.shading			: 15
URxvt.underlineColor		: #c5f779
URxvt.borderless		: 1
URxvt.secondaryScroll		: true
URxvt.internalBorder		: 8.9

URxvt*fading			: 40
URxvt*fadeColor			: black
URxvt*tint			: white
URxvt*tintColor			: white
URxvt*shading			: 20
URxvt*blurRadius		: 5

URxvt.perl-ext-common		: default,matcher
URxvt.urlLauncher		: chromium
URxvt.matcher.button		: 1

!-----------
! Fonts
!-----------

URxvt.allow_bold		: true
URxvt*font			: xft:Inconsolata:size=13:antialias=true:hinting=true
URxvt*boldFont			: xft:Inconsolata:size=13:antialias=true:hinting:true

!----------
! Scrollbar
!----------

URxvt.scrollStyle		: urxvt
URxvt.scrollBar			: false

!---------
! Colors
!---------

URxvt*background		: #000000
URxvt*foreground		: #FFFFFF

! black dark/light
URxvt*color0			: #000000
URxvt*color8			: #545054

! red dark/light
URxvt*color1			: #A80000
URxvt*color9			: #F85450

! green dark/light
URxvt*color2			: #00A850
URxvt*color10			: #50FC50

! yellow dark/light
URxvt*color3			: #A85450
URxvt*color11			: #F2FC50

! blue dark/light
URxvt*color4			: #5555AA
URxvt*color12			: #5054F8

! magenta dark/light
URxvt*color5			: #A800A8
URxvt*color13			: #F854F8

! white dark/light
URxvt*color7			: #FFFFFF
URxvt*color15			: #F8FCF8

URxvt*color6			: #00A8A8
URxvt*color14			: #50FCF8

!Xterm config
xterm*termName			: xterm
xterm*background		: #000000
xterm*foreground		: #A8A8A8

!!Emacs*font                      : terminus-12
